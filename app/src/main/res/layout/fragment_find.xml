<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/default_margin"
    android:layout_marginStart="@dimen/default_margin"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etAccountRegisterSchool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sekolah" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etAccountRegisterNik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nomor induk siswa" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btAccoutRegister"
        style="@style/FirebaseUI.Button"
        android:layout_height="48dp"
        android:background="@color/authui_colorPrimary"
        android:text="Save"
        android:textColor="@color/authui_inputTextColor" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView" />

</LinearLayout>
