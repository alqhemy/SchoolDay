<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/top_down_margin"
            android:layout_marginEnd="@dimen/top_down_margin"
            android:layout_marginStart="@dimen/top_down_margin"
            android:layout_marginTop="@dimen/top_down_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvHomeItemTopic"
                    style="@style/medium_caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/tvHomeItemDate"
                    style="@style/medium_caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvHomeItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_down_margin"
                android:text="TextView"
                android:textColor="@color/colorPrimary"
                android:textColorHighlight="?attr/colorPrimary"
                android:textColorHint="?attr/colorPrimary" />
            <TextView
                android:id="@+id/tvHomeItemDescription"
                android:layout_width="match_parent"
                android:textColor="@color/colorText87"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_down_margin"
                android:layout_marginBottom="@dimen/top_down_margin"
                android:text="TextView" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvHomeItemUser"
                    style="@style/medium_caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/tvHomeItemUserTitle"
                    style="@style/medium_caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textAlignment="textEnd" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
